# hotkey stuff

#volume
set $refresh_i3status killall -SIGUSR1 i3status
set $raise_volume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
set $lower_volume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioRaiseVolume $raise_volume
bindsym XF86AudioLowerVolume $lower_volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym --border --whole-window  $sup+button4 $raise_volume
bindsym --border --whole-window  $sup+button5 $lower_volume

